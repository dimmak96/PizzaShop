<h2>Your cart</h2>



<table class="table table-striped">
	 <thead>
	 	<tr>
	    	<th>
	   			#
			</th>
	    	<th>
	    		Name
	    	</th>
	     	<th>
	     		Price
	     	</th>
	      	<th>
	      		Amount
	      	</th>
	   	</tr>
	</thead>
	<tbody>
		<% total_price = 0 %>
		<% total = 0 %>
		<% total_amount = 0 %>
		<% @items.each do |item| %>
			
		
		<tr>
	        <th scope="row">
	        	<%= item[0] %>
	        </th>
	        <td>
	        	<%= Product.find(item[0]).title %>
	            
	        </td>
	        <td>
	        	<%= Product.find(item[0]).price %>
	        </td>
	        <td>
	            <%= item[1] %>
	        </td>
        </tr>
        	<% total_amount += item[1].to_i %>
        	<% total_price += Product.find(item[0]).price * total_amount %>
        	<% total_amount = 0 %>

        	<% total += total_price %>
        	<% total_price = 0 %>
        	
        <% end %>
    </tbody>
</table>
	<p>Total price: <%= total %></p>
