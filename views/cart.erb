<h2>Your cart</h2>



<table class="table table-striped">
	 <thead>
	 	<tr>
	    	<th>
	   			#
			</th>
	    	<th>
	    		Name
	    	</th>
	     	<th>
	     		Price
	     	</th>
	      	<th>
	      		Amount
	      	</th>
	   	</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
			
		
		<tr>
	        <th scope="row">
	        	<%= item[0] %>
	        </th>
	        <td>
	        	<%= Product.find(item[0]).title %>
	            
	        </td>
	        <td>
	        	<%= Product.find(item[0]).price %>
	        </td>
	        <td>
	            <%= item[1] %>
	        </td>
        </tr>
        <% end %>
    </tbody>
</table>