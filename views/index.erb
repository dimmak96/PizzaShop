<h2>Welcome to Pizza Shop</h2>

<div class = "row">

<% @products.each do |product| %>
	<div class="col-md-3">
		<div><%= product.title %></div>
		<div><img src="<%= product.path_to_image %>"></div>
		<div><%= product.description %></div>
		<div>Price: <%= product.price %> rub</div> 
		<div>Size: <%= product.size %></div>
		<div><button class="btn btn-sm btn-success" onclick="add_to_cart(<%= product.id %>)">Add to cart</button></div>
	</div>
<% end %>

</div>
<br>
<button class="btn btn-primary" onclick="something()">Click me</button>

<script type="text/javascript">
	
	$(function(){
		update_orders_input();
		update_orders_button();
	});

</script>
